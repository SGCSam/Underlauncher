<local:SharpWindow x:Class="Underlauncher.WaitingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Underlauncher"
        mc:Ignorable="d"
        Title="Converting Audio" Width="400" Height="200" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Loaded="SharpWindow_Loaded" Background="Black" Closing="SharpWindow_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.4*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="waitBlock" Style="{StaticResource TextBlock.Content}" Margin="15, 0" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Text="" />
        <ProgressBar Grid.Row="1" Margin="25, 15" IsIndeterminate="True" />
    </Grid>
</local:SharpWindow>
